<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geogram.example.sportnews.ui.activityes.SingleArticleActivity"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <include layout="@layout/toolbar_layout" />

        <ImageView
            android:id="@+id/singleArticleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"/>

        <TextView
            android:id="@+id/titleArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standart_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/titleArticleSize"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/little_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/standartTextArticle" />
    </LinearLayout>

</ScrollView>
